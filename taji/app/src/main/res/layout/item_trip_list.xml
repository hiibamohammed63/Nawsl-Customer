<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_marginBottom="@dimen/dim_20"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:backgroundTint="@android:color/white"
        app:cardElevation="8dp"
        app:cardCornerRadius="@dimen/dim_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/dim_10"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_my_location" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:padding="@dimen/dim_10"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/startPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="start"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:text="بداية الرحلة"
                        android:fontFamily="@font/cairo"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/dim_10"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_end_location" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:padding="@dimen/dim_10"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/endPoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/cairo"
                        android:gravity="start"
                        android:paddingStart="@dimen/dim_05"
                        android:paddingEnd="@dimen/dim_05"
                        android:text="نهاية الرحلة"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/dim_10"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_cab" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:padding="@dimen/dim_10"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/dim_05"
                        android:paddingStart="@dimen/dim_05"
                        android:textColor="@color/dark_grey"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:text="Driver Name"
                        android:gravity="start"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dim_10"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:padding="@dimen/dim_10"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dim_05"
                            android:paddingStart="@dimen/dim_05"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dim_10"
                            android:text="المسافة"
                            android:gravity="start"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dim_05"
                            android:paddingStart="@dimen/dim_05"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="تكلفة الرحلة"
                            android:fontFamily="@font/cairo"
                            android:gravity="start"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:padding="@dimen/dim_10"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dim_05"
                            android:paddingStart="@dimen/dim_05"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="@dimen/dim_10"
                            android:textStyle="bold"
                            android:fontFamily="@font/cairo"
                            android:text="المسافة"/>

                        <TextView
                            android:id="@+id/tripCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/dim_05"
                            android:paddingStart="@dimen/dim_05"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:fontFamily="@font/cairo"
                            android:text="SDG 0000"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>